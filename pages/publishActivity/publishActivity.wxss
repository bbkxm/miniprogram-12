/* 页面容器 */
.container {
  padding: 24rpx;
  box-sizing: border-box;
  padding-bottom: 120rpx; /* 为底部按钮留出空间 */
}

/* 步骤指示器 */
.step-indicator {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 40rpx;
  margin-bottom: 32rpx;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  flex: 1;
}

.step-num {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  margin-bottom: 12rpx;
}

.step-item.active .step-num {
  background-color: #4285f4;
  color: #fff;
}

.step-text {
  font-size: 26rpx;
  color: #999;
}

.step-item.active .step-text {
  color: #4285f4;
  font-weight: 500;
}

.step-line {
  position: absolute;
  top: 24rpx;
  right: -50%;
  width: 100%;
  height: 2rpx;
  background-color: #f0f0f0;
  z-index: -1;
}

.step-item.active .step-line {
  background-color: #4285f4;
}

/* 步骤内容 */
.step-content {
  margin-bottom: 32rpx;
}

.form-step {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 表单组件 */
.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.required {
  color: #f44336;
}

.form-control {
  width: 100%;
  height: 80rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  padding: 16rpx;
  box-sizing: border-box;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 封面图片 */
.form-cover {
  position: relative;
}

.cover-image {
  width: 100%;
  height: 320rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

.cover-change {
  position: absolute;
  bottom: 16rpx;
  right: 16rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 100rpx;
}

.cover-picker {
  width: 100%;
  height: 320rpx;
  border: 1rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f9f9f9;
}

.picker-icon {
  font-size: 72rpx;
  color: #ddd;
  margin-bottom: 16rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #999;
}

/* 时间选择 */
.time-container {
  display: flex;
  align-items: center;
}

.time-item {
  flex: 1;
}

.time-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.time-picker {
  padding: 16rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.time-separator {
  margin: 0 16rpx;
  color: #999;
  margin-top: 32rpx;
}

/* 位置选择 */
.location-picker {
  padding: 16rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
}

.location-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.location-coordinates {
  font-size: 24rpx;
  color: #999;
}

.location-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
  padding: 16rpx 0;
}

.location-icon {
  margin-right: 8rpx;
}

/* 打卡点列表 */
.checkpoint-container {
  padding: 16rpx 0;
}

.checkpoint-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.checkpoint-empty {
  padding: 40rpx 0;
  text-align: center;
  color: #999;
}

.checkpoint-list {
  margin-bottom: 24rpx;
}

.checkpoint-item {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}

.checkpoint-index {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #4285f4;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.checkpoint-info {
  flex: 1;
}

.checkpoint-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.checkpoint-coordinates {
  font-size: 24rpx;
  color: #999;
}

.checkpoint-delete {
  padding: 10rpx;
  font-size: 32rpx;
  color: #999;
}

.checkpoint-add {
  padding: 16rpx 0;
  text-align: center;
  color: #4285f4;
  font-size: 28rpx;
}

/* 底部按钮 */
.btn-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 24rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 99;
}

.btn-prev, .btn-next, .btn-submit {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
}

.btn-prev {
  background-color: #f8f8f8;
  color: #666;
  border: 1rpx solid #ddd;
}

.btn-next {
  background-color: #4285f4;
  color: #fff;
}

.btn-submit {
  background-color: #4CAF50;
  color: #fff;
}

.btn-submit.disabled {
  background-color: #cccccc;
}

/* 日期选择器模态框 */
.picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
}

.picker-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.picker-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  transition: transform 0.3s ease;
}

.picker-header {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
}

.picker-title {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  font-weight: 500;
}

.picker-cancel, .picker-confirm {
  font-size: 28rpx;
  padding: 0 24rpx;
}

.picker-cancel {
  color: #999;
}

.picker-confirm {
  color: #4285f4;
}

.picker-view {
  height: 400rpx;
}

.picker-placeholder {
  display: flex;
  height: 100%;
  align-items: center;
  justify-content: center;
  color: #999;
} 